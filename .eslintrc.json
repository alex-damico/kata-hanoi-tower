{
  "extends": "airbnb",
  "rules": {
    "no-underscore-dangle": ["error", {"allow": ["_id"], "allowAfterThis": true}],
    "class-methods-use-this": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  },
  "env": {
    "mocha": true,
    "node": true
  }
}
